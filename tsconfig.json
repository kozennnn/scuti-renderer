{
    "compilerOptions": {
      "target": "es2019",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "esModuleInterop": true,
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true
    },
    "include": ["./src"]
  }
